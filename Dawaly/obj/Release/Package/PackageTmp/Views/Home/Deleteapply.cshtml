@model Dawaly.Models.ApplyToPlace

@{
    ViewBag.Title = "Deleteapply";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-default" style="background-color: black;
      height:60px; padding-left: 15px; padding-right: 15px;">
    <h3 class="panel-heading">Are you sure you want to delete this? </h3>
</div>

<div class="panel panel-default h5" style="background-color:black;
 padding-left:15px;padding-right:15px;padding-bottom:10px;
 padding-top:10px">
    <hr />
    <dl class="dl-horizontal  panel-heading" style="text-align-last:left">
        <dt style="height: 40px;">
            Message
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Message)
        </dd>
        <dt style="height: 40px;">
           Date
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ApplyDate)
        </dd>
        <dt style="height: 40px;">
           Place
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Place.Name)
        </dd>
        <dt style="height: 40px;">
           User
        </dt>
        <dd>
            @Html.DisplayFor(model => model.User.UserName)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "GetPlacesbyUser")
        </div>
    }
</div>
