@model IEnumerable<Dawaly.Models.Place>

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
} 

 <div class="panel panel-default" style="background-color:black;
         padding-left:15px;padding-right:15px;">
     <h3 class="panel-heading"> Result..</h3>
        <div class="row text-center">
            @foreach (var itme in Model)
            {
                <div class="col-md-3 ">
                    <div class="thumbnail" style="margin-bottom:30px">
                        <img src="~/Uploads/@itme.Image"
                             style="height:250px;width:270px;margin-bottom:2px">
                        <p class="glyphicon glyphicon-map-marker">

                            @Html.DisplayFor(modelItem => itme.Location)
                        </p>
                        <p class="glyphicon glyphicon-home">
                            @Html.DisplayFor(modelItem => itme.Name)
                        </p>
                        <div>
                            @Html.ActionLink("Details", "Details", new { PlaceId = itme.Id },
                                               new { @class = "btn btn-primary" })
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

