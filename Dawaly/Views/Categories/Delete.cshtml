@model Dawaly.Models.Category

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-default" style="background-color: black;
      height:60px; padding-left: 15px; padding-right: 15px;">
    <h3 class="panel-heading">Are you sure you want to delete this? </h3>
</div>
<div class="panel panel-default h5" style="background-color:black;
 padding-left:15px;padding-right:15px;padding-bottom:10px;
 padding-top:10px">

    <dl class="dl-horizontal  panel-heading" style="text-align-last:left">
        <dt style="height: 50px;">
            Type
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CategortName)
        </dd>

        <dt style="height: 50px;">
            Description
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CategortDescription)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
